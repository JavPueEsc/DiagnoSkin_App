<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ESTILOS COMUNES -->
    <!--Edit text personalizado - redondeado-->
    <style name="EditTextRedondeado">
        <item name="android:background">@drawable/edittext_redondeado</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/grisContraste</item>
        <item name="android:textColor">@color/grisContraste</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextosAzul_tam16" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextosGris_tam16" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grisContraste</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextosAzul_tam30" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextosGris_tam30" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/grisContraste</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextosAzul_tam20" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Etilo calendario datapicker -->
    <!-- Calendario-->
    <style name= "Estilo_ColoresCalendario" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/azulBrillante</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Estilo_BotonAceptar</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Estilo_BotonCancelar</item>
    </style>

    <!--Botones del calendario, heredan de otro parent para que no sean redondeados los botones-->
    <style name="Estilo_BotonAceptar" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Estilo_BotonCancelar" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ESTILOS LOGING-->
    <!-- Color de fondo -->
    <style name="ColorFondoLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/celesteFondoLogin</item>
    </style>

    <!-- Switch con colores personalizados-->
    <style name="SwitchBoxAzul">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/azulBrillante</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Estilo botones Login -->
    <style name="EstiloBotonesLogin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/azulBrillante</item>
    </style>

    <!-- ESTILOS APLICACIÃ“N-->
    <style name="ColorFondoAplicacion" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextosBlanco_tam16" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
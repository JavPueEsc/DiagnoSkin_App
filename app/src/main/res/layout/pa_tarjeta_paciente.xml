<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/rectangulo_tarjetas">

                <TextView
                    android:id="@+id/PA_lbl_idPaciente_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PA_lbl_idPaciente_tarjeta" />

                <TextView
                    android:id="@+id/lbl_apellidos_nombre_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PA_lbl_idPaciente_tarjeta"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_lbl_apellidoNombre_tarjeta" />

                <TextView
                    android:id="@+id/PA_lbl_Nuhsa_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lbl_apellidos_nombre_tarjeta"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_lbl_nuhsa_tarjeta" />

                <TextView
                    android:id="@+id/PA_lbl_dni_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PA_lbl_Nuhsa_tarjeta"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_lbl_dni_tarjeta" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/rectangulo_tarjetas">

                <ImageView
                    android:id="@+id/PA_XDIA_img_fotoDiagnostico"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    card_view:srcCompat="@drawable/rectangulo_tarjetas" />

                <TextView
                    android:id="@+id/PA_XDIA_lbl_idDiagnostico_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/PA_XDIA_img_fotoDiagnostico"
                    android:layout_marginStart="12dp"
                    android:text="@string/PA_XDIA_lbl_idDiagnostico_tarjeta" />

                <TextView
                    android:id="@+id/PA_XDIA_lbl_diagnosticoDiagnostico_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PA_XDIA_lbl_idDiagnostico_tarjeta"
                    android:layout_toEndOf="@+id/PA_XDIA_img_fotoDiagnostico"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_XDIA_lbl_diagnosticoDiagnostico_tarjeta" />

                <TextView
                    android:id="@+id/PA_XDIA_lbl_pronosticoDiagnostico_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PA_XDIA_lbl_diagnosticoDiagnostico_tarjeta"
                    android:layout_toEndOf="@+id/PA_XDIA_img_fotoDiagnostico"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_XDIA_lbl_pronosticoDiagnostico_tarjeta" />

                <TextView
                    android:id="@+id/PA_XDIA_lbl_fechaDiagnostico_tarjeta"
                    style="@style/TextosAzul_tam16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PA_XDIA_lbl_pronosticoDiagnostico_tarjeta"
                    android:layout_toEndOf="@+id/PA_XDIA_img_fotoDiagnostico"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/PA_XDIA_lbl_fechaDiagnostico_tarjeta" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>

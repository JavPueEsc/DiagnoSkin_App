<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/ColorFondoAplicacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.studium.opcion_perfil.ModificarMedicoActivity">

    <TextView
        android:id="@+id/PER_titulo_modificarMedico"
        style="@style/TextosAzul_tam30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="@string/PER_titulo_modificarMedico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/PER_titulo_modificarMedico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/PER_nombre_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/PER_nombre_modificarMedico" />

            <EditText
                android:id="@+id/PER_txt_nombre_modificarMedico"
                style="@style/EditTextRedondeado"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="@string/PER_hint_nombre_modificarMedico"
                android:inputType="text"
                android:maxLength="45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_apellidos_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_apellidos_modificarMedico" />

            <EditText
                android:id="@+id/PER_txt_apellidos_modificarMedico"
                style="@style/EditTextRedondeado"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="@string/PER_hint_apellidos_modificarMedico"
                android:inputType="text"
                android:maxLength="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_numColegiado_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_numColegiado_modificarMedico" />

            <EditText
                android:id="@+id/PER_txt_numColegiado_modificarMedico"
                style="@style/EditTextRedondeado"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="@string/PER_hint_numColegiado_modificarMedico"
                android:inputType="date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_especialidad_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_especialidad_modificarMedico" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/PER_spinner_especialidad_modificarMedico"
                style="@style/EditTextRedondeado"
                android:popupBackground="@drawable/rectangulo_blanco"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_centroTrabajo_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_centroTrabajo_modificarMedico" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/PER_spinner_centroTrabajo_modificarMedico"
                style="@style/EditTextRedondeado"
                android:popupBackground="@drawable/rectangulo_blanco"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:maxLength="12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_telefono_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_telefono_modificarMedico" />

            <EditText
                android:id="@+id/PER_txt_telefono_modificarMedico"
                style="@style/EditTextRedondeado"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="@string/PER_hint_telefono_modificarMedico"
                android:inputType="phone"
                android:maxLength="15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/PER_email_modificarMedico"
                style="@style/TextosAzul_tam16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PER_email_modificarMedico" />

            <EditText
                android:id="@+id/PER_txt_email_modificarMedico"
                style="@style/EditTextRedondeado"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="@string/PER_hint_email_modificarMedico"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/PA_btn_aceptar_modificarDatosPaciente"
                style="@style/EstiloBotonesLogin"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/PER_btnAceptar_modificarMedico"
                app:layout_constraintBottom_toTopOf="@+id/LO_lbl_camposObligatorios_modificarDatosPciente"/>

            <TextView
                android:id="@+id/LO_lbl_camposObligatorios_modificarDatosPciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextosGris_tam16"
                android:text="@string/LO_lbl_camposObligatorios"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="50dp"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>